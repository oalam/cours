<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="jpaPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>jpa.manager.concurrency.Book03</class>
        <class>jpa.manager.jpql.Address03</class>
        <class>jpa.manager.jpql.Customer03</class>
        <class>jpa.manager.manipulating.ex01.Book02</class>
        <class>jpa.manager.manipulating.ex01.Book02Auto</class>
        <class>jpa.manager.manipulating.ex02.Address01</class>
        <class>jpa.manager.manipulating.ex02.Customer01</class>
        <class>jpa.manager.simple.ex01.Book01</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/sampleJPA"/>
            <property name="javax.persistence.jdbc.password" value="APP"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.user" value="APP"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
